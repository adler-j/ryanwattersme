---
layout: null
insearch: false
regenerate: true
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for item in site.tutorials | sort: 'series_no' limit:3 %}
      <item>
        <title>{{ item.title | xml_escape }}</title>
        <description>{{ item.description | xml_escape }}</description>
        {% if item.lastmod %}
        <pubDate>{{ item.lastmod }}</pubDate>
        {% else %}
        <pubDate>{{ item.publishdate }}</pubDate>
        {% endif %}
        <link>{{site.url}}{{ item.url }}</link>
        {% for tag in item.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
    {% for item in site.articles | sort: 'publishdate' | reverse limit:3 %}
      <item>
        <title>{{ item.title | xml_escape }}</title>
        <description>{{ item.description | xml_escape }}</description>
        {% if item.lastmod %}
        <pubDate>{{ item.lastmod }}</pubDate>
        {% else %}
        <pubDate>{{ item.publishdate }}</pubDate>
        {% endif %}
        <link>{{site.url}}{{ item.url }}</link>
        {% for tag in item.tags %}
        <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
