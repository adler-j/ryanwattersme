---
insearch: false
regenerate: true
---

{"siteContent": [
{% for article in site.articles | sort: 'published_on' %}
	{% if article.tags %}
		{% for tag in article.tags %}
			{"title": "{{article.title}}",
				"image": "{{article.main_image}}",  
					"url": "{{article.url}}",
					"tag": "{{tag | slugify}}",
					"description": "{{article.description | truncatewords: 20, '...' }}",
					"date":"{{article.published_on | date: "%Y-%m-%d" }}"
			},
		{% endfor %}
	{% endif %}
{% endfor %}
{% for tutorial in site.tutorials | sort: 'published_on' %}
	{% if tutorial.tags %}
		{% for tag in tutorial.tags %}
			{"title": "{{tutorial.title}}",
			 "image": "{% if tutorial.main_image %}{{tutorial.main_image}}{% else %}/icons/{{tutorial.series | slugify }}-icon.svg{% endif %}",
			 "url": "{{tutorial.url}}",
			 "tag": "{{tag | slugify}}",
			 "description": "{{tutorial.description | truncatewords: 20, '...' }}",
			 "tutseries:": "{{tutorial.series | capitalize }}",
			 "date":"{{tutorial.published_on | date: "%Y-%m-%d" }}"
			}
	{% if forloop.rindex0 > 0 %},{% endif %}
{% endfor %}{% if forloop.rindex0 > 0 %}, {% endif %}{% endif %}
{% endfor %}]}


